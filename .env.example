# Configuración de Facebook / Instagram
# Token de larga duración para la página (Page Access Token)
FB_PAGE_ACCESS_TOKEN=tu_token_de_pagina_aqui
# ID de la página de Facebook
FB_PAGE_ID=123456789
# ID de la cuenta de Instagram Business vinculada a la página
IG_ACCOUNT_ID=987654321

# Configuración de Google Sheets
# Ruta al archivo JSON de credenciales de servicio (Service Account) relative to run dir or absolute
GOOGLE_SHEETS_KEY_PATH=credentials.json
# ID de la hoja de cálculo (se encuentra en la URL de la hoja)
GOOGLE_SHEETS_ID=tu_id_de_google_sheets

# Configuración de Gemini (Google AI)
GEMINI_API_KEY=tu_api_key_de_gemini_aqui
